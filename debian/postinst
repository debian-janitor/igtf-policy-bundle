#!/bin/sh
# postinst script for igtf-policy-bundle
#
# see: dh_installdeb(1)

set -e

profile=@PROFILE@

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# auxiliary function to find $1 in $2
in_list() {
    local i
    local s=$1
    shift
    for i in "$@" ; do
	if test "$s" = "$i" ; then
	    return 0
	fi
    done
    return 1
}

# canonical comparison of variable lists, set newconf=1 if different
compare_lists() {
    local canon_a=`echo $1 | sort`
    local canon_b=`echo $2 | sort`
    if [ "$canon_a" != "$canon_b" ]; then
	newconf=1
    fi
}

# check if $1 is supposed to be included
ca_included() {
    if [ "$debconf_install_profile" = yes ]; then
	if in_list "$ca" "$debconf_excluded" ; then
	    return 1
	else
	    return 0
	fi
    else
	if in_list "$ca" "$debconf_included" ; then
	    return 0
	else
	    return 1
	fi
    fi
}

case "$1" in
    configure)
	# symlink everything in /usr/share/igtf-bundle to /etc/grid-security/certificates
	if [ ! -e /etc/grid-security/certificates ]; then
	    mkdir -p /etc/grid-security/certificates
	fi

	if [ -f /etc/grid-security/igtf-policy-${profile}.conf ]; then
	    . /etc/grid-security/igtf-policy-${profile}.conf
	    newconf=0 # do we need a new configuration file?
	else
	    newconf=1
	fi
	# get the setting of whether to install the profile
	db_get igtf-policy-${profile}/install_profile
	debconf_install_profile="$RET"
	if [ $install_profile != $debconf_install_profile ]; then
		newconf=1
	fi

	db_get igtf-policy-${profile}/exclude_ca
	debconf_excluded=`echo "$RET" | tr ',' ' '`

	db_get igtf-policy-${profile}/include_ca
	debconf_included=`echo "$RET" | tr ',' ' '`

	compare_lists "$debconf_excluded" "$exclude_ca"
	compare_lists "$debconf_included" "$include_ca"

	for f in /usr/share/igtf-policy-${profile}/* ; do
            # read the link
	    if [ -h "$f" ]; then
		l=`readlink "$f"`
	    else
		l="$f"
	    fi
	    ca=`basename ${l%.*}`
	    if ca_included $ca; then
                # create symlink if it doesn't exist
		if [ ! -e /etc/grid-security/certificates/`basename $f` ]; then
		    ln -s "$f" /etc/grid-security/certificates/ 
		fi
	    else
                # remove the files
		rm -f /etc/grid-security/certificates/`basename $f`
	    fi
    	done

	# finally check if any real changes were made to the settings
	# canonicalise the variables
	if [ $newconf = 1 ]; then
	    cat > /etc/grid-security/igtf-policy-${profile}.conf.dpkg-new <<EOF
# This file governs the 
EOF
	fi	    

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
